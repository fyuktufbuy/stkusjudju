#include <iostream> 
#include <string> 
using namespace std;
 
int main() 
{
    string s, first, last;
    cout << "String:\n";
    getline(cin, s);
    
    first=s.substr(0,s.find(' '));
    last=s.substr(s.find_last_of(' ')+1);
    
    cout << "first: " << first << "\n last: " << last << "\n";    
    
system("pause");
return 0;
}

#include <iostream>
#include <string>
using namespace std;
string s,s1; int n=0,i;
int main()
{
getline(cin,s);
for (i=1; i<s.size(); i++)
{
    if (s[i]==' ') n=i;
}
s1=s.erase(0,n);
if (n=0) cout << s; else cout << s1;
return 0;
}
//с предложением из 1 слова работает, а где 2 и более он почему-то(я в цикле i сразу 1 присвоил) берет вместе со словом пробел. Буду очень признателен за разбор ошибок

#include <iostream> 
#include <string> 
#include <sstream>
 
    using namespace std;
 
int main() {
    int max = 0;
    string s, word;
    getline(cin, s);
    stringstream str(s);
    while (str >> word) {
        if (word.size() > max) {
            max = word.size();
            s = word;
        }
    }
    cout << s << "\n" << max << "\n";
    system("pause");
    return 0;
}

#include <iostream>
#include <string.h>
#include <conio.h>
 
using namespace std;
int main()
{
    setlocale(LC_ALL, "");
const int n = 100;
char s[n];
cout << "Введите строку" << endl;
cin.getline(s,100);
int count = 0;
int p = strlen(s), i = 0;
while(i < p)
{
if (s[i] != ' ' && (s[i + 1] == ' ' || s[i +1] == '\0'))
count++;
i++;
}
cout << endl << "Количество слов: " << count;
getch();
return 0;
}

#include <iostream>
#include <cstring>
 
int main()
{
    char w[20];
    std::cout << " -> ";
    std::cin.getline(w, sizeof w);
 
    if(!std::cin) return 1;
 
    for(size_t i = 0, j = std::strlen(w) - 1; i < j; ++i, --j)
    {
        if(w[i] != w[j])
        {
            std::cout << "no\n";
            return 0;
        }
    }
 
    std::cout << "yes\n";
}

#include <iostream>
#include <string>
#include <sstream>
 
bool famio(std::string & s) {
    std::istringstream ist(s);
    std::string f, i, o;
    if ( ( ist >> f ) && ( ist >> i ) && ( ist >> o ) ) {
        i[1] = o[1] = '.';
        i.resize(2);
        o.resize(2);
        std::ostringstream ost;
        ost << f << ' ' << i << ' ' << o;
        s = ost.str();
        return true;
    }
    else
        return false;
}
 
int main() {
    std::string s;
    
    while ( std::cout << "FIO: " && std::getline(std::cin, s) && ! s.empty() ) {
        if ( famio(s) )
            std::cout << "RET: " << s << std::endl;
        else
            std::cerr << "Wrong string format!" << std::endl;
    }
    
    return 0;
}

#include <iostream>


int main()

{

char str[80]; // Объявление символьной строки

int i = 0, cnt = 0; // Объявление переменных i и cnt целого типа - счетчик для цикла  

// и переменная, в которой будем считать кол-во замен


std::cin >> str; // Считывание строки из консоли в символьную строку str


while (str[i] != '\0') // Пока очередной символ не станет равен символу конца строки

{

 if (str[i] == 'c')

 {

  str[i] = 'v';  // Заменяем символ 'a' на символ 'b'

  cnt++; // Увеличиваем счетчик замен на единицу

 }

 i++; //переходим к следующему символу

}


std::cout << str << std::endl; // Выводим измененную символьную строку на экран

std::cout << cnt; // Выводим количество замен

return 0;

}


#include <bits/stdc++.h>
 
    using namespace std;
 
int main() {
    string s1, s2;
    getline(cin, s1);
    getline(cin, s2);
    int count = 0;
    for (int i = s1.size() - 1; i >= 0; i--) {
        if (s1.substr(i, s2.size()) == s2)
            count++;
    }
    cout << count << endl;
    system("pause");
    return 0;
}
